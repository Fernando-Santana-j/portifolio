<style>
    #lang-containner{
        display: flex;
        position: fixed;
        z-index: 1000;
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        justify-content: center;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 1em;
    }
    #lang-content{
        margin: 1em;
        min-height: 10em;
        min-width: 15em;
        width: 100%;
        height: 100%;
        max-height: 20em;
        max-width: 26em;
        transition: 0.5s;
        border-radius: 8px;
        background-color: rgba(255, 255, 255, 0.8);
        -webkit-box-shadow:  0px 0px 80px 10px var(--color-secundary);
        -moz-box-shadow:  0px 0px 80px 10px var(--color-secundary);
        box-shadow:  0px 0px 80px 10px var(--color-secundary);
        border: 2px solid var(--border-color);
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        flex-wrap: wrap;
        animation: popupAnim 1s;
    }
    .lang-icons{
        margin-top: 5px;
        cursor: pointer;
        width: 5em;
        margin-left: 0.8em; 
    }
    
    @keyframes popupAnim{
        0%{
            transform: scale(0);
            
        }
        50%{
            -webkit-box-shadow:  0px 0px 0px 0px var(--color-secundary);
            -moz-box-shadow:  0px 0px 0px 0px var(--color-secundary);
            box-shadow:  0px 0px 0px 0px var(--color-secundary);
        }
    }
</style>

<div id="lang-containner" style="display: none;">
    <div id="lang-content">
        <img data-lang="pt-BR" class="lang-icons" src="../public/assets/svgs/BR.svg">
        <img data-lang="en-US" class="lang-icons" src="../public/assets/svgs/US.svg">
    </div>
</div>